<Window x:Class="ECWPFClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECWPFClient"
        xmlns:vm="clr-namespace:ECWPFClient.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Path=Title}" 
        Height="427" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top" >
            <MenuItem Header="События"/>
            <MenuItem Header="Данные"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom" Height="20" VerticalAlignment="Bottom"/>
        <Grid Width="Auto">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="0.3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

            </Grid.ColumnDefinitions>
            <GridSplitter Grid.Row="1" 
                          ShowsPreview="False" 
                          Height="4" 
                          HorizontalAlignment="Stretch" 
                          VerticalAlignment="Center"/>
            <DataGrid 
                Grid.Row="2" 
                ItemsSource="{Binding Events}" 
                IsReadOnly="True"
                AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="РМ" Binding="{Binding Computer.Name}"/>
                    <DataGridTextColumn Header="Дата" Binding="{Binding EventDate}" Width="*"/>
                    <DataGridTextColumn Header="Событие" Binding="{Binding EventType.Description}" Width="*"/>
                    <DataGridTextColumn Header="Раздел" Binding="{Binding Section}" Width="*"/>
                    <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="*"/>
                </DataGrid.Columns>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding EventType.IsAlarm}" Value="true">
                                <Setter Property="Foreground" Value="Red"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Grid>
    </DockPanel>
    
    <!--<Grid>
        <TextBox HorizontalAlignment="Left"
                 Height="23" 
                 Margin="27,23,0,0" 
                 TextWrapping="Wrap" 
                 Text="{Binding Path=Title, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Top" 
                 Width="120"/>

    </Grid>-->
</Window>
